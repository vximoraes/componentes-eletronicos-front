# =============================================================================
# CONFIGURAÇÕES DO FRONTEND
# =============================================================================
# URL da API para o navegador (client-side)
# Usada em requisições do navegador para a API
NEXT_PUBLIC_API_URL=http://localhost:3010

# URL base da aplicação
NEXTAUTH_URL=http://localhost:3000

# Chave secreta do NextAuth
NEXTAUTH_SECRET=GERE_UMA_CHAVE_SECRETA_AQUI

# =============================================================================
# CONFIGURAÇÕES DA API
# =============================================================================
# Porta da API
PORT=3010

# URL da API para chamadas server-side (dentro do Docker)
# IMPORTANTE: No Docker, use o nome do serviço (componentes-eletronicos-api) em vez de localhost
# Para desenvolvimento local fora do Docker, use http://localhost:3010
API_URL=http://componentes-eletronicos-api:3010

# Ambiente de execução (development, production)
NODE_ENV=production

# URL de conexão com o MongoDB
DB_URL=mongodb://mongodb:27017/componentes-eletronicos

# =============================================================================
# CONFIGURAÇÕES DO MINIO (Storage de Objetos)
# =============================================================================
# Porta da API do MinIO
MINIO_PORT=9000

# Porta do console web do MinIO
MINIO_CONSOLE_PORT=9001

# Endpoint do MinIO (hostname do container)
MINIO_ENDPOINT=minio

# Credenciais de acesso ao MinIO
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Buckets do MinIO
MINIO_BUCKET=usuarios
MINIO_BUCKET_2=componentes

# URL pública do MinIO para acesso pelo navegador
# Use localhost quando o navegador precisar acessar as imagens
# No Docker, esta URL deve apontar para o host da máquina
MINIO_PUBLIC_URL=http://localhost:9000

# =============================================================================
# CONFIGURAÇÕES JWT
# =============================================================================
JWT_SECRET_ACCESS_TOKEN="GERE_UMA_CHAVE_SECRETA_AQUI"
JWT_SECRET_REFRESH_TOKEN="GERE_UMA_CHAVE_SECRETA_AQUI"
JWT_SECRET_PASSWORD_RECOVERY="GERE_UMA_CHAVE_SECRETA_AQUI"
JWT_ACCESS_TOKEN_EXPIRATION=7d
JWT_REFRESH_TOKEN_EXPIRATION=7d
